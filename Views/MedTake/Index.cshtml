@model IEnumerable<MedManager.Models.MedTakeModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Lista leków</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj lek</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width:5%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width:5%">
                @Html.DisplayFor(modelItem => item.Dose)
            </td>
            <td style="width:5%">
                @Html.DisplayFor(modelItem => item.Hour)
            </td>
            <td style="width:5%">
                @Html.ActionLink("Gotowe", "Done", new { id = item.MedId }, new { @class = "btn btn-success" }) 
                @Html.ActionLink("Szczegóły", "Details", new { id = item.MedId }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Edytuj", "Edit", new { id = item.MedId }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Usuń", "Delete", new { id = item.MedId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>